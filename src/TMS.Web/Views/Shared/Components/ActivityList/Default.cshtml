@model IEnumerable<TMS.ViewModelLayer.Models.Activities.ActivityListItemViewModel>

@if (Model.Any())
{
    <table class="table table-striped table-bordered">
        <tbody>
            @foreach (var activity in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Edit" asp-controller="Activities" asp-route-id="@activity.Id">@activity.Name</a>
                    </td>
                    <td>
                        @activity.Description
                    </td>
                    <td>
                        @activity.Created
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Activities" asp-route-id="@activity.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No activities found.</p>
}