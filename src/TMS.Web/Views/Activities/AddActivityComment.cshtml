@model TMS.ViewModelLayer.Models.Activities.ActivityCommentViewModel

<div class="row">
    <div class="col-md-12">
        <hr/>
        <form asp-controller="Activities" asp-action="AddComment" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <input type="hidden" asp-for="ActivityId" />
            <h4>Add Comment</h4>
            <div class="form-group">
                <div class="col-md-12">
                    <textarea asp-for="Description" placeholder="Add Comment" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-default">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>