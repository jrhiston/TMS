@model TMS.ViewModelLayer.Models.Areas.AreaEditPageModel

<div style="display: flex; align-items: center; justify-content:space-between">
    <h2>@Model.AreaName</h2>
    <div>
        @foreach(var person in Model.AssociatedPeople)
        {
            <span>@person.FirstName @person.LastName</span>
        }
        <a asp-action="Index" asp-controller="Areas">All Areas</a>
    </div>
</div>

<hr/>

<p>@Model.AreaDescription</p>

<table class="table">
    <tbody>
        @foreach (var activity in Model.Activities)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-controller="Areas" asp-route-id="@activity.Id">@activity.Name</a>
                </td>
                <td>
                    @activity.Description
                </td>
                <td>
                    @activity.Created
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Areas" asp-route-id="@activity.Id" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-md-12">
        <a asp-controller="Activities" asp-action="Create" class="btn btn-primary">Create Activity</a>
    </div>
</div>