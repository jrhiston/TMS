@model TMS.ViewModelLayer.Models.Tags.Pages.TagsPageModel
@{
    ViewData["Title"] = "Manage Your Tags";
}

<h2>@ViewData["Title"].</h2>



<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Can set on activity</th>
            <th>Created</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model.Tags)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Tags" asp-route-id="@tag.Id">@tag.Name</a>
                </td>
                <td>
                    @tag.Description
                </td>
                <td>
                    @(tag.CanSetOnActivity ? "Yes" : "No")
                </td>
                <td>
                    @tag.Created.ToLocalTime()
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Tags" asp-route-id="@tag.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Tags" asp-route-id="@tag.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-md-12">
        <a asp-controller="Tags" asp-action="Create" class="btn btn-primary">Create Tag</a>
    </div>
</div>